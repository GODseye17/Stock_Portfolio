# =============================================================================
# Portfolio Dashboard - Environment Variables Example
# =============================================================================
# Copy this file to .env.local and update the values as needed
# =============================================================================

# =============================================================================
# WebSocket Configuration
# =============================================================================

# WebSocket server URL for real-time price updates
# For development, you can use a mock WebSocket service
NEXT_PUBLIC_WEBSOCKET_URL=wss://ws.postman-echo.com/raw

# =============================================================================
# API Configuration
# =============================================================================

# Base URL for API endpoints
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api

# Rate limiting configuration (requests per minute)
NEXT_PUBLIC_RATE_LIMIT_PER_MINUTE=50

# =============================================================================
# External Finance APIs (Optional - for production use)
# =============================================================================

# Alpha Vantage API Key (https://www.alphavantage.co/)
# Used as fallback for financial data
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here

# Yahoo Finance API Key (if using official API)
YAHOO_FINANCE_API_KEY=your_yahoo_finance_api_key_here

# Google Finance API Key (if using official API)
GOOGLE_FINANCE_API_KEY=your_google_finance_api_key_here

# =============================================================================
# Development Configuration
# =============================================================================

# Enable mock data for development (true/false)
NEXT_PUBLIC_ENABLE_MOCK_DATA=true

# Enable debug mode for detailed logging (true/false)
NEXT_PUBLIC_DEBUG_MODE=false

# Enable development tools and hot reload
NEXT_PUBLIC_DEV_MODE=true

# =============================================================================
# Production Configuration
# =============================================================================

# Enable analytics (Google Analytics, etc.)
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# Enable performance monitoring
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# Security Configuration
# =============================================================================

# Secret key for API authentication (generate a secure random string)
API_SECRET_KEY=your_secure_secret_key_here

# JWT secret for token signing (generate a secure random string)
JWT_SECRET=your_jwt_secret_here

# =============================================================================
# Database Configuration (if using external database)
# =============================================================================

# Database connection string
DATABASE_URL=your_database_connection_string_here

# Redis connection string (for caching)
REDIS_URL=your_redis_connection_string_here

# =============================================================================
# Third-Party Services
# =============================================================================

# Email service configuration (if implementing email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password_here

# Cloud storage configuration (if using cloud storage)
CLOUD_STORAGE_BUCKET=your_bucket_name_here
CLOUD_STORAGE_REGION=us-east-1

# =============================================================================
# Feature Flags
# =============================================================================

# Enable real-time updates
NEXT_PUBLIC_ENABLE_REAL_TIME=true

# Enable advanced charts
NEXT_PUBLIC_ENABLE_ADVANCED_CHARTS=true

# Enable portfolio optimization features
NEXT_PUBLIC_ENABLE_PORTFOLIO_OPTIMIZATION=false

# Enable social features (sharing, etc.)
NEXT_PUBLIC_ENABLE_SOCIAL_FEATURES=false

# =============================================================================
# Performance Configuration
# =============================================================================

# Cache TTL in milliseconds (default: 60 seconds)
CACHE_TTL=60000

# Maximum cache size (default: 1000 items)
CACHE_MAX_SIZE=1000

# Enable service worker for offline functionality
NEXT_PUBLIC_ENABLE_SERVICE_WORKER=false

# =============================================================================
# Monitoring and Logging
# =============================================================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable request logging
ENABLE_REQUEST_LOGGING=true

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=false

# =============================================================================
# Development Overrides
# =============================================================================

# Override port for development server
PORT=3000

# Enable HTTPS in development
ENABLE_HTTPS_DEV=false

# Enable hot reload
ENABLE_HOT_RELOAD=true

# =============================================================================
# Testing Configuration
# =============================================================================

# Test database URL
TEST_DATABASE_URL=your_test_database_url_here

# Enable test mode
NODE_ENV=development

# =============================================================================
# Notes:
# =============================================================================
# 1. Never commit .env.local to version control
# 2. Use strong, unique secrets for production
# 3. Rotate API keys regularly
# 4. Use environment-specific configurations
# 5. Validate all environment variables on startup
# =============================================================================
